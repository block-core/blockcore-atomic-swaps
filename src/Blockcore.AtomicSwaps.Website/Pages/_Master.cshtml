@using Microsoft.AspNetCore.Components.Web
@using Blockcore.AtomicSwaps.Website.ThemeBase;
@using Blockcore.AtomicSwaps.Website.ThemeBase.libs

@namespace Blockcore.AtomicSwaps.Website.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject IBootstrapBase BootstrapBase
@inject ITheme Theme

@{
    BootstrapBase.init(Theme);
}

<!DOCTYPE html>
<html @Html.Raw(Theme.printHtmlAttributes("html"))>
<!--begin::Head-->

<head>
    <base href="~/" />
    <meta charset="utf-8"/>
    <meta name="description" content=""/>
    <meta name="keywords" content=""/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta property="og:locale" content="en_US"/>
    <meta property="og:type" content="article"/>
    <meta property="og:title" content=""/>

    <link rel="shortcut icon" href="@Theme.getFavicon()"/>

    <script src="https://unpkg.com/lightweight-charts/dist/lightweight-charts.standalone.production.js"></script>


    <!--begin::Fonts-->
    @foreach (string font in Theme.getFonts())
    {
        <link rel="stylesheet" href="@font"/>
    }
    <!--end::Fonts-->

    <!--begin::Global Stylesheets(mandatory)-->
    @foreach (string file in Theme.getGlobalAssets("Css"))
    {
        <link rel="stylesheet" type="text/css" href="@file"/>
    }
    <!--end::Global Stylesheets-->
</head>
<!--end::Head-->

<!--begin::Body-->
<!body @Html.Raw(Theme.printHtmlAttributes("body")) class='@Theme.printHtmlClasses("body")'>
    <partial name="~/Shared/Partials/ThemeMode/_Init.cshtml"></partial>

    <!--begin::Global Javascript(mandatory)-->
    @foreach (string file in Theme.getGlobalAssets("Js"))
    {
        <script src="@file"></script>
    }
    <!--end::Global Javascript-->

    <partial name="~/Shared/Partials/_PageLoader.cshtml"></partial>
    
    @RenderBody()


    
    <script src="_framework/blazor.server.js"></script>
</!body>
<!--end::Body-->

</html>
